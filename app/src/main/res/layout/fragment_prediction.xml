<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/fragment_prediction"
    tools:context=".view.fragment.PredictionFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/lemon_milk"
        android:gravity="center_horizontal"
        android:text="Create a Prediction"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_margin="6dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/fragmentcreate_et_team1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Team 1" />

                <EditText
                    android:id="@+id/fragmentcreate_et_team2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="Team 2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/fragmentcreate_et_score1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Score" />

                <EditText
                    android:id="@+id/fragmentcreate_et_score2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="Score" />
            </LinearLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>



    <Button
        android:id="@+id/fragmentcreate_btn_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:text="Input" />


    <Button
        android:id="@+id/fragmentcreate_btn_lihatdata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:padding="60dp"
        android:text="Check Prediction" />


</LinearLayout>